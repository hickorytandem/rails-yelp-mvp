<div class="card">
  <h2><%= @restaurant.name %></h2>
    <ul>
      <li><%= @restaurant.address %></li>
      <li><%= @restaurant.phone_number %></li>
      <li><%= @restaurant.category %></li>
    </ul>

    <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
    <hr>
    <% end %>

    <%= link_to "Return", restaurants_path %>
    <%= link_to "Delete", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?"} %>
    <%= link_to "Ad a new review, jerkface!", new_restaurant_review_path(@restaurant) %>
  </div>
